
@{
    ViewBag.Title = "Formulario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Carros</h2>

<form action="/Carro/Adicionar" method="post">
    <input id="codigo" type="hidden" name="montadora.Codigo" value="@ViewBag.Carro.Codigo" class="form-control" />

    <label for="modelo">Modelo:</label>
    <input id="modelo" name="carro.Modelo" value="@ViewBag.Carro.Modelo" class="form-control" />

    <label for="blindagem">Blindagem:</label>
    <select id="blindagem" name="carro.Blindagem" class="form-control">
        <option value="1" selected="@(ViewBag.Carro.Blindagem == true)">Sim</option>
        <option value="0" selected="@(ViewBag.Carro.Blindagem == false)">Não</option>
    </select>

    <label for="portas">Portas:</label>
    <select id="portas" name="carro.Portas" class="form-control">
        <option value="1" selected="@(ViewBag.Carro.Portas == 1)">1</option>
        <option value="2" selected="@(ViewBag.Carro.Portas == 2)">2</option>
        <option value="3" selected="@(ViewBag.Carro.Portas == 3)">3</option>
        <option value="4" selected="@(ViewBag.Carro.Portas == 4)">4</option>
    </select>

    <label for="cor">Cor:</label>
    <input id="cor" name="carro.Cor" value="@ViewBag.Carro.Cor" class="form-control" />

    <label for="tipoVeiculo">Tipo de Veículo:</label>
    <select id="tipoVeiculo" name="carro.TipoVeiculo" class="form-control">
        <option value="0">Leve</option>
        <option value="1">Médio</option>
        <option value="2">Pesado</option>
    </select>

    <label for="tipoCombustivel">Tipo de Combustível:</label>
    <select id="tipoCombustivel" name="carro.TipoCombustivel" class="form-control">
        <option value="0">Álcool</option>
        <option value="1">Diesel</option>
        <option value="2">Gás Natural</option>
        <option value="3">Gasolina</option>
        <option value="4">Flex</option>
    </select>

    <label for="tipoCambio">Tipo de Câmbio:</label>
    <select id="tipoCambio" name="carro.TipoCambio" class="form-control">
        <option value="0">Automático</option>
        <option value="1">Automático Sequencial</option>
        <option value="2">CVT</option>
        <option value="3">Manual</option>
        <option value="4">Semi Automático</option>
    </select>

    <label for="montadora">Montadora:</label>
    <select id="montadora" name="carro.MontadoraCodigo" class="form-control">
        @foreach (var montadora in ViewBag.Montadoras)
        {
            <option value="@montadora.Codigo" selected="@(ViewBag.Carro.MontadoraCodigo == montadora.Codigo)">@montadora.NomeFantasia</option>
        }
    </select>

    <input type="submit" value="Cadastrar" class="btn btn-primary" />
</form>